// tsconfig.backend.json - Configuração específica para build do Railway
{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ES2020",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "types": ["node", "vite/client"],
    // "allowImportingTsExtensions": true,
    "declaration": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/webhook-server/**/*",
    "src/lib/api.ts",
    "src/lib/auth.ts",
    "src/lib/domainHelpers.ts",
    "src/lib/gateways/**/*",
    "src/lib/payment.ts",
    "src/lib/queue.ts",
    "src/lib/shopifyConfig.ts",
    "src/lib/websocket-server.ts",
    "src/types/**/*",
    "src/routes/**/*",
    "src/utils/errorHandling.js",
    "src/utils/events-polyfill.ts",
    "src/utils/format.ts",
    "src/utils/pdfGenerator.ts",
    "src/utils/secureData.ts",
    "src/utils/tokenUtils.js",
    "src/utils/validation.js"
  ],
  "exclude": [
    "src/lib/emailService.tsx",
    "src/lib/supabaseClient.ts",
    "src/utils/secureLogger.ts",
    "src/lib/server/**/*"
  ]
}
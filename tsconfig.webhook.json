// tsconfig.webhook.json
{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/webhook-server/**/*",
    "src/lib/**/*",
    "src/types/**/*",
    "src/routes/**/*"
  ]
}

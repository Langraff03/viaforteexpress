// tsconfig.webhook.json
{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ES2022",
    "target": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "types": ["vite/client", "node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/webhook-server/**/*",
    "src/lib/**/*",
    "src/types/**/*",
    "src/routes/**/*",
    "src/emails/**/*",
    "src/utils/**/*"
  ]
}
